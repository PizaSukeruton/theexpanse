      overflow: hidden;
      position: relative;
    }
    
    .bottom-right-window {
      flex: 0 0 calc(35% - 16px);
      border: 1px solid var(--accent);
      border-radius: var(--radius);
      padding: 0;
      background: transparent;
      box-shadow: none;
      overflow: hidden;
      position: relative;
      margin-bottom: 16px;
    }
    
    .window-inner {
      position: relative;
      width: 100%;
      height: 100%;
      border-radius: var(--radius);
      padding: 16px;
      background: rgba(0, 32, 0, 0.95);
      box-shadow: var(--shadow);
      transition: transform 0.6s ease, opacity 0.6s ease;
      will-change: transform, opacity;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }
    
    .window-inner {
      opacity: 0.85;
      pointer-events: none;
    }
    
    #left-window-inner {
      transform: translateX(-100%);
    }
    
    #top-right-window-inner {
      transform: translateY(-100%);
    }
    
    #bottom-right-window-inner {
      padding-bottom: 32px;      transform: translateY(100%);
    }
    
    .window-inner.wm-open {
      opacity: 1;
      pointer-events: auto;
    }
    
    #left-window-inner.wm-open {
      transform: translateX(0);
    }
    
    #top-right-window-inner.wm-open {
      transform: translateY(0);
    }
    
    #bottom-right-window-inner.wm-open {
      transform: translateY(0);
    }
    
    .login-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100%;
      gap: 20px;
    }
    
    .login-form {
      width: 100%;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
    
    .login-input {
      background: rgba(0,16,0,0.25);
      border: 1px solid var(--accent);
      border-radius: 12px;
      outline: none;
      color: var(--fg);
      padding: 12px 14px;
      font: inherit;
