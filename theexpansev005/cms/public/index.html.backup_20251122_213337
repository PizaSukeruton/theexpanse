<!DOCTYPE html>
<html lang="en"><!-- v2 -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Character Management System</title>
    <link rel="stylesheet" href="/cms/css/cms-styles.css?v=3">
</head>
<body>
    <div class="cms-container">
        <section class="window" id="left-panel">
            <div class="window-header">
                <span class="window-title">CHARACTERS</span>
                <span class="window-controls">▣ ▭ ✕</span>
            </div>
            <div class="window-inner" id="left-window-inner">
                <button id="connect-db-btn" class="connect-button">CONNECT TO DATABASE</button>
                <div id="character-list-container"></div>
            </div>
        </section>

        <section class="window" id="right-panel">
            <div class="top-right-window" id="top-right-window">
                <div class="window-inner" id="top-right-window-inner">
                    <div class="welcome-message">
                        <h2>Character Management System</h2>
                        <p>Click "CONNECT TO DATABASE" to load characters.</p>
                        <p class="help-hint">Type <code>help</code> for available commands.</p>
                    </div>
                </div>
            </div>

            <div class="bottom-right-window" id="bottom-right-window">
                <div class="window-inner" id="bottom-right-window-inner">
                    <div class="command-bar">
                        <span class="prompt">&gt;</span>
                        <input 
                            type="text" 
                            id="command-input" 
                            class="command-input" 
                            placeholder="Enter command..."
                            autocomplete="off"
                            spellcheck="false"
                        />
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script>
        const connectBtn = document.getElementById('connect-db-btn');
        const listContainer = document.getElementById('character-list-container');
        const display = document.getElementById('top-right-window-inner');

        connectBtn.addEventListener('click', async () => {
            connectBtn.textContent = 'CONNECTING...';
            connectBtn.disabled = true;

            try {
                const response = await fetch('/api/cms/characters');
                const data = await response.json();

                if (data.success && data.characters.length > 0) {
                    connectBtn.style.display = 'none';
                    
                    const html = data.characters.map(char => `
                        <div class="character-item" onclick="showCharacter('${char.character_id}')">
                            <div class="character-name">${char.character_name}</div>
                            <div class="character-category">${char.category || 'Unknown'}</div>
                        </div>
                    `).join('');
                    
                    listContainer.innerHTML = html;
                    
                    display.innerHTML = `
                        <div class="success-message">
                            <h2>✓ Database Connected</h2>
                            <p>Loaded ${data.count} characters from database</p>
                            <p>Select a character to view details</p>
                        </div>
                    `;
                } else {
                    throw new Error('No characters found');
                }
            } catch (error) {
                connectBtn.textContent = 'CONNECTION FAILED - RETRY';
                connectBtn.disabled = false;
                
                display.innerHTML = `
                    <div class="error-message">
                        <h2>✗ Connection Failed</h2>
                        <p>Could not connect to database</p>
                        <p>Error: ${error.message}</p>
                    </div>
                `;
            }
        });

        window.showCharacter = async (characterId) => {
            try {
                const response = await fetch(`/api/cms/character/${encodeURIComponent(characterId)}`);
                const data = await response.json();

                if (data.success) {
                    const char = data.character;
                    display.innerHTML = `
                        <div class="character-profile">
                            <h2>${char.character_name}</h2>
                            <p><strong>HEX ID:</strong> ${char.character_id}</p>
                            <p><strong>Category:</strong> ${char.category}</p>
                            <p><strong>Description:</strong> ${char.description || 'No description'}</p>
                            <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #00ff00;">
                                <h3 style="color: #00ff00; margin: 10px 0;">IMAGE GALLERY</h3>
                                <input type="file" id="imageUpload" accept="image/*" style="border: 2px dashed #00ff00; padding: 10px; margin: 10px 0; cursor: pointer; background: rgba(0,0,0,0.3); width: 100%;">
                                <button onclick="uploadImage()" style="width: 100%; background: rgba(0,0,0,0.6); border: 2px solid #00ff00; color: #00ff00; padding: 10px; cursor: pointer; font-family: 'Courier New', monospace; margin-bottom: 15px;">UPLOAD IMAGE</button>
                                <div id="gallery" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)); gap: 10px;"></div>
                            </div>
                        </div>
                    `;
                    loadCharacterImages(characterId);
                }
            } catch (error) {
                console.error('Error loading character:', error);
            }
        };

        let currentCharacterId = null;

        function loadCharacterImages(characterId) {
            currentCharacterId = characterId;
            fetch('/api/images/character/' + encodeURIComponent(characterId))
                .then(r => r.json())
                .then(data => {
                    const gallery = document.getElementById('gallery');
                    if (data.success && data.images.length > 0) {
                        gallery.innerHTML = data.images.map(img => 
                            `<div style="position: relative; width: 100px; height: 100px; border: 2px solid ${img.is_active ? '#00ff00' : '#666'}; cursor: pointer;" onclick="setProfileImage(event, '${img.url}')">` +
                            `<img src="${img.url}" style="width: 100%; height: 100%; object-fit: cover;" title="Click to set as profile image">` +
                            `<button onclick="deleteImage(event, '${img.gallery_entry_id}')" style="position: absolute; top: 2px; right: 2px; background: red; color: white; border: none; padding: 2px 6px; cursor: pointer;">X</button>` +
                            '</div>'
                        ).join('');
                    } else {
                        gallery.innerHTML = '<div style="color: #666;">No images yet</div>';
                    }
                })
                .catch(e => console.error('Error loading images:', e));
        }

        function uploadImage() {
            const file = document.getElementById('imageUpload').files[0];
            if (!file || !currentCharacterId) return;
            const formData = new FormData();
            formData.append('image', file);
            fetch('/api/images/upload/' + encodeURIComponent(currentCharacterId), {
                method: 'POST',
                body: formData
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    loadCharacterImages(currentCharacterId);
                    document.getElementById('imageUpload').value = '';
                }
            })
            .catch(e => console.error('Upload error:', e));
        }

        function setActiveImage(galleryId) {
            fetch('/api/images/set-active/' + galleryId, { method: 'PUT' })
                .then(r => r.json())
                .then(data => {
                    if (data.success) loadCharacterImages(currentCharacterId);
                })
                .catch(e => console.error('Set active error:', e));
        }

        function deleteImage(event, galleryId) {
            event.stopPropagation();
            if (!confirm('Delete this image?')) return;
            fetch('/api/images/' + galleryId, { method: 'DELETE' })
                .then(r => r.json())
                .then(data => {
                    if (data.success) loadCharacterImages(currentCharacterId);
                })
                .catch(e => console.error('Delete error:', e));
        }

        function setProfileImage(event, imageUrl) {
            event.stopPropagation();
            fetch('/api/cms/character/' + encodeURIComponent(currentCharacterId) + '/profile-image', {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ image_url: imageUrl })
            })
                .then(r => r.json())
                .then(data => {
                    if (data.success) alert('Profile image set!');
                })
                .catch(e => console.error('Set profile error:', e));
        }

    </script>
</body>
</html>
