import jwt from 'jsonwebtoken';
import { generateToken, verifyToken as verifyTokenUtil } from '../utils/jwtUtil.js';

/**
 * JWT Authentication Middleware
 * Verifies JWT tokens for protected routes
 * Uses the same JWT_SECRET as jwtUtil.js
 * Created: November 6, 2025
 * Security Fix #7
 */

/**
 * Verify JWT token from Authorization header
 */
export const verifyToken = (req, res, next) => {
    try {
        // Get token from header
        const authHeader = req.headers.authorization;
        
        if (!authHeader) {
            return res.status(401).json({ 
                error: 'Access denied. No token provided.' 
            });
        }

        // Check for Bearer token
        const token = authHeader.startsWith('Bearer ') 
            ? authHeader.slice(7) 
            : authHeader;

        if (!token) {
            return res.status(401).json({ 
                error: 'Access denied. Invalid token format.' 
            });
        }

        // Use the same verification as jwtUtil
        const decoded = verifyTokenUtil(token);
        req.user = decoded;
        next();
    } catch (error) {
        return res.status(401).json({ 
            error: 'Invalid or expired token.' 
        });
    }
};

/**
 * Optional: Verify admin role
 */
export const verifyAdmin = (req, res, next) => {
    if (req.user && req.user.role === 'admin') {
        next();
    } else {
        res.status(403).json({ 
            error: 'Access denied. Admin privileges required.' 
        });
    }
};

export default verifyToken;
