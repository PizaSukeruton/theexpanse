    .app {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
      height: 100vh;
      padding: 16px;
      background: linear-gradient(180deg, rgba(0,40,0,0.95), rgba(0,0,0,1)),
                  radial-gradient(90% 60% at 50% 35%, rgba(0,255,0,0.25), transparent 60%);
    }
    .crt {
      filter: contrast(1.05) saturate(1.1);
      text-shadow: 0 0 1px rgba(0,255,0,0.45), 0 0 8px rgba(0,255,0,0.12);
    }
    .crt::after {
      content: "";
      pointer-events: none;
      position: fixed;
      inset: 0;
      background: repeating-linear-gradient(to bottom, rgba(0,255,0,0.06) 0 2px, transparent 2px 4px);
      mix-blend-mode: screen;
      z-index: 1;
    }
    .window {
      border: 1px solid #00ff75;
      border-radius: 12px;
      padding: 16px;
      box-shadow: 0 0 10px rgba(0, 255, 117, 0.2);
    }
    /* === LEFT PANEL WITH OVERLAY === */
    .left-window {
      position: relative;
      background: #000;
      overflow: hidden;
      cursor: pointer;
    }
    /* Overlay cover that slides off */
    .left-window::before {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0, 32, 0, 0.95);
      transform: translateX(0);
      transition: transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
      z-index: 10;
      pointer-events: auto;
    }
    .left-window.open::before {
      transform: translateX(-100%);
    }
    .left-window.closed::before {
      transform: translateX(0);
    }
    /* === RIGHT WINDOWS === */
    .right-window {
      display: flex;
      flex-direction: column;
      gap: 8px;
      background: transparent;
    }
    .top-right-window,
    .bottom-right-window {
      border: 1px solid #00ff75;
      border-radius: 12px;
      padding: 16px;
      background: rgba(0, 32, 0, 0.95);
      box-shadow: 0 0 10px rgba(0, 255, 117, 0.2);
      overflow-y: auto;
      flex: 0 0 auto;
    }
    .top-right-window { height: calc(65% - 4px); }
    .bottom-right-window { height: calc(35% - 4px); }
