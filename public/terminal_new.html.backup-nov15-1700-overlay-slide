<body>
  <div class="app crt">
    <section class="window left-window closed" id="left-panel"></section>
    <section class="window right-window" id="right-panel">
      <div class="top-right-window" id="top-right-window"></div>
      <div class="bottom-right-window" id="bottom-right-window"></div>
    </section>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const leftPanel = document.getElementById("left-panel");
      if (!leftPanel) return;
      leftPanel.addEventListener("click", () => {
        leftPanel.classList.toggle("open");
        leftPanel.classList.toggle("closed");
      });
    });
  </script>
